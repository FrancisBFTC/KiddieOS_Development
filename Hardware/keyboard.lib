%MACRO __Keyboard_Driver_Load 0
	mov BYTE[Sector], KEYBOARD_SECTOR
	mov BYTE[Drive], 80h
	mov BYTE[NumSectors], KEYBOARD_NUM_SECTORS
	mov WORD[SegmentAddr], 0800h
	mov WORD[OffsetAddr], KEYBOARD	
	call ReadDisk
%ENDMACRO

