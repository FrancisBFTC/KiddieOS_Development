%IFNDEF _IODEVICE_LIB
%DEFINE _IODEVICE_LIB

%DEFINE ACK      0xFA
%DEFINE RESEND   0xFE

%MACRO __ReadPort 1
	xor dx, dx
	xor ax, ax
	mov dx, %1
	in al, dx
%ENDMACRO

%MACRO __WritePort 2
	xor dx, dx
	mov dx, %1
	mov al, %2
	out dx, al
%ENDMACRO

%ENDIF