;=========================================================;
; VBE 3.0 extensions.                                     ;
;=========================================================;
    .LinBytesPerScanLine  dw	1                         ;
    .BnkNumberOfPages	  db	1                         ;
    .LinNumberOfPages	  db	1                         ;
    .LinRedMaskSize 	  db	1                         ;
    .LinRedFieldPos 	  db	1                         ;
    .LinGreenMaskSize	  db	1                         ;
    .LinGreenFieldPos	  db	1                         ;
    .LinBlueMaskSize	  db	1                         ;
    .LinBlueFieldPos	  db	1                         ;
    .LinRsvdMaskSize	  db	1                         ;
    .LinRsvdFieldPos	  db	1                         ;
