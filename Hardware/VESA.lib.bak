SHELL.PrintData 	 EQU 	(SHELL16+9)

; Inicializa um modo especial (32bpp)
Set_Video_Mode:
    pusha
	push 	ds
	push 	es
	
	mov 	ax, 0x3000
	mov 	ds, ax
	
	call 	Search_Mode
	call 	VESA.GetInfo
	
	pop 	es
	pop 	ds
	popa	
ret

; Captura informações do cartão VBE
VBE_Info_Card:
	xor 	ax, ax
	mov 	es, ax
	mov 	di, VESA_Info
	mov 	ax, 4f00h
    int 	10h
ret

; Captura informações do modo gráfico
; CX = Número do modo
VBE_Info_Mode:
	xor 	ax, ax
	mov 	es, ax
	mov 	di, Mode_Info
	mov 	ax, 4f01h
    int 	10h
ret

; Inicialize o modo gráfico
; BX = Número do modo
; BIT 15 = Limpagem de tela
; BIT 14 = Ativação do LFB
VBE_Init_Mode:
	call 	ShowGraphicConfig
	xor 	eax, eax
	int 	0x16
	
	mov 	bx, 0x4000  ; 0xC000 <- No Clear Screen)
	add 	bx, word [GUI.Video_Mode]    ;Adiciona o número do modo.
	mov 	ax, 4f02h
    int 	10h
ret

;----------------------------------------
; Search_Mode:
;     Procura por VESA.
;     Ver se a máquina suporta o padrão VESA.
;	  Se suportar, procura na lista de modos especiais
Search_Mode:
	call 	VBE_Info_Card
	
	; Se VESA é suportada.
	cmp 	ax, word 0x004F
    je		GetAddress
	jmp 	ErrorVesa
	
; Pegar Endereço da lista de modos
GetAddress:
	mov 	ebx, DWORD [es:VESA_Info.VideoModePtr]
	push 	ebx
	and 	ebx, 0x0000FFFF
	mov 	di, bx
	pop 	ebx
	shr 	ebx, 16
	and 	ebx, 0x0000FFFF
	mov 	ax, bx
	mov 	es, ax
	push 	es
	push 	di
	xor 	bx, bx
	
; Pesquisa modo por modo
Find_Mode:
	pop 	di
	pop 	es
	mov 	cx, WORD [es:di + bx]
	cmp 	cx, 0xFFFF
	je 		No_Mode
	push 	es
	push 	di
	call 	VBE_Info_Mode
	add 	bx, 2
	call 	VESA.GetWidth
	cmp 	word [ReX_Required], ax
	jne 	Find_Mode
	call 	VESA.GetHeight
	cmp 	word [ReY_Required], ax
	jne 	Find_Mode
	call 	VESA.GetBPP
	cmp 	byte [BPP_Required], al
	jne 	Find_Mode
	mov 	word[GUI.Video_Mode], cx
	call 	VBE_Init_Mode
	pop  	di
	pop 	es
Done:
	xor  	ax, ax
	mov 	es, ax
	clc
ret

; Caso não encontrar o modo especial
No_Mode:
	pusha
	mov 	si, Mode_No_Found
	call 	Print_String
	popa
	stc
ret

; Caso não suportar VESA
ErrorVesa:	
    pusha  
	mov 	si, No_Vesa_Msg
    call 	Print_String 
	popa
	stc
ret

; Pegar Bits Por Pixel.	
VESA.GetBPP:
	xor eax, eax
	mov es, ax
    mov al, byte [es:Mode_Info.BitsPerPixel]
ret

; Pegar largura da tela em pixels.		
VESA.GetWidth:
	xor eax, eax
	mov es, ax
    mov ax, word [es:Mode_Info.XResolution] 
ret
	
; Pegar altura da tela em pixels.	
VESA.GetHeight:
	xor eax, eax
	mov es, ax
    mov ax, word [es:Mode_Info.YResolution]
ret

; Pegar o Linear Frame Buffer.	
VESA.GetLFB:
	xor eax, eax
	mov es, ax
    mov eax, dword [es:Mode_Info.PhysBasePtr]
ret

; Pegar o modo gráfico de vídeo.	
VESA.GetMode:
	xor eax, eax
	mov es, ax
    mov ax, word[GUI.Video_Mode]
ret

; Salvar as informações de vídeo principais
VESA.GetInfo:
	call 	VESA.GetWidth
    mov 	word [GUI.Screen_X], ax
	
	call 	VESA.GetHeight
    mov 	word [GUI.Screen_Y], ax

	call 	VESA.GetBPP
    mov 	byte [GUI.BitsPerPixel], al
	
	call 	VESA.GetLFB
	mov 	dword [GUI.LinearFrameBuffer], eax
ret

; Mostrar as informações gráficas atuais na tela
ShowGraphicConfig:
	push 	es
	mov 	ax, ds
	mov 	es, ax
	push 	es
	
	mov 	al, 0
	mov 	di, LoadingVesa
	mov 	cx, size.LoadingVesa
	call 	SHELL.PrintData
	
	mov 	al, 0
	mov 	di, ResX
	mov 	cx, size.ResX
	call 	SHELL.PrintData
	
	
	call 	VESA.GetWidth
	call 	Print_Dec_Value32
	
	pop 	es
	push 	es
	mov 	al, 0
	mov 	di, ResY
	mov 	cx, size.ResY
	call 	SHELL.PrintData
	
	call 	VESA.GetHeight
	call 	Print_Dec_Value32
	
	pop 	es
	push 	es
	mov 	al, 0
	mov 	di, Bpp
	mov 	cx, size.Bpp
	call 	SHELL.PrintData
	
	call 	VESA.GetBPP
	call 	Print_Dec_Value32
	
	pop 	es
	push 	es
	mov 	al, 0
	mov 	di, ModeN
	mov 	cx, size.ModeN
	call 	SHELL.PrintData
	
	call 	VESA.GetMode
	call 	Print_Dec_Value32
	
	pop 	es
	push 	es
	mov 	al, 0
	mov 	di, LFBA
	mov 	cx, size.LFBA
	call 	SHELL.PrintData
	
	call 	VESA.GetLFB
	call 	Print_Hexa_Value32
	
	pop 	es
	push 	es
	mov 	al, 0
	mov 	di, Press
	mov 	cx, size.Press
	call 	SHELL.PrintData
	
	pop 	es
	pop 	es
ret


