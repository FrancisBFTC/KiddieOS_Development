;=========================================================;
; VBE CARD INFORMATION                                    ;
;=========================================================;
VESA_Info:		                                          ;
    .Signature		    db "VBE2"                         ;
    .Version		    dw	0200h                         ;
    .OEMStringPtr		dd	1                             ;
    .Capabilities: 		times 4 db 0                      ;
    .VideoModePtr		dd	1                             ;
    .TotalMemory		dw	1                             ;
    .OEMSoftwareRev 	dw	1                             ;
    .OEMVendorNamePtr	dd	1                             ;
    .OEMProductNamePtr	dd	1                             ;
    .OEMProductRevPtr	dd	1                             ;
    .Reserved:  		times 222 db 0                    ;
    .OEMData:   		times 256 db 0                    ;
; ========================================================;

;=========================================================;
; VESA MODE INFORMATION                                   ;
;=========================================================;
Mode_Info:	                                              ;
    .ModeAttributes 	  dw	1                         ;
    .WinAAttributes 	  db	1              	          ;
    .WinBAttributes 	  db	1             	          ;
    .WinGranularity 	  dw	1             	          ;
    .WinSize		      dw	1                         ;
    .WinASegment		  dw	1                         ;
    .WinBSegment		  dw	1                         ;
    .WinFuncPtr		      dd	1                         ;
    .BytesPerScanLine	  dw	1                         ;
    .XResolution		  dw	0  ;*width                ;
    .YResolution		  dw	0  ;*height               ;
    .XCharSize		      db	1                         ;
    .YCharSize		      db	1                         ;
    .NumberOfPlanes 	  db	1                         ;
    .BitsPerPixel		  db	0  ;*bpp                  ;
    .NumberOfBanks		  db	1                         ;
    .MemoryModel		  db	1                         ;
    .BankSize		      db	1                         ;
    .NumberOfImagePages	  db	1                         ;
    .Reserved_page		  db	1                         ;
    .RedMaskSize		  db	1                         ;
    .RedMaskPos		      db	1                         ;
    .GreenMaskSize		  db	1                         ;
    .GreenMaskPos		  db	1                         ;
    .BlueMaskSize		  db	1                         ;
    .BlueMaskPos		  db	1                         ;
    .ReservedMaskSize	  db	1                         ;
    .ReservedMaskPos	  db	1                         ;
    .DirectColorModeInfo  db    1                         ;
; ========================================================;

;=========================================================;
; VBE 2.0 extensions.                                     ;
;=========================================================;
    .PhysBasePtr		dd	0    ;*LFB                    ;
    .OffScreenMemOffset	dd	1                             ;
